@model IEnumerable<SAT.DATA.EF.StudentStatus>

@{
    ViewBag.Title = "Student Statuses";
}
<div class="container p-3">
    <p class="text-right my-2">
        @Html.ActionLink("Add a new Student Status", "Create", null, new { @class = "btn btn-sm btn-success"})
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SSName)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.SSDescription)
        </th>*@
            <th></th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SSName)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.SSDescription)
        </td>*@
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.SSID }, new { @class = "text-secondary" })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SSID }, new { @class = "text-info" })
            </td>
            <td>
                @if (!ViewBag.ListOfSSIDsInUse.Contains(item.SSID))
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.SSID }, new { @class = "text-danger" })
                }
                else
                {
                    <span class="text-muted">SSID In Use</span>
                }
            </td>
        </tr>
        }

    </table>
</div>

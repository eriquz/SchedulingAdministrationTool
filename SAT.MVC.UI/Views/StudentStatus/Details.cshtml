@model SAT.DATA.EF.StudentStatus

@{
    ViewBag.Title = "Details - " + Model.SSName;
}

<div class="container p-3">
    <dl class="dl-horizontal">
        <dt>
            Status
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SSName)
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SSDescription)
        </dd>

    </dl>
    <div class="d-flex justify-content-between">
        @Html.ActionLink("Edit", "Edit", new { id = Model.SSID }, new { @class = "btn btn-info my-2" })
        @Html.ActionLink("Back to Statuses", "Index", null, new { @class = "btn btn-secondary my-2" })
    </div>
</div>
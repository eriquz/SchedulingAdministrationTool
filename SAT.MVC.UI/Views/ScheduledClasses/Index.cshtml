@model IEnumerable<SAT.DATA.EF.ScheduledClass>

@{
    ViewBag.Title = "Scheduled Courses";
}
<div class="container p-3">
    <p class="text-right my-2">
        @Html.ActionLink("Add Course to Schedule", "Create", null, new { @class="btn btn-success" })
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Term)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstructorName)
            </th>
            <th>
                Room
            </th>*@
            <th>
                Status
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a href="@Url.Action("Details", new { id = item.ScheduledClassID} )" class="course-link">
                    @Html.DisplayFor(modelItem => item.Term)
                </a>
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstructorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.ScheduledClassStatus.SCSName)
            </td>
            <td class="text-right">
                @Html.ActionLink("Edit", "Edit", new { id = item.ScheduledClassID }, new { @class = "btn btn-info mx-2" })
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Remove", "Delete", new { id = item.ScheduledClassID }, new { @class = "btn btn-danger mx-2" })
                }
            </td>
        </tr>
        }

    </table>
</div>
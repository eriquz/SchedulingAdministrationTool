@model SAT.DATA.EF.Student

@{
    ViewBag.Title = "Details // " + Model.FullName;
}

<div class="container py-5 px-3">
    <div class="row">
        <div class="col-md-6">
            <img src="~/Content/images/students/@Model.PhotoURL" alt="@Model.FirstName" class="img-fluid" />
        </div>
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    Full Name
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FullName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Major)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Major)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Phone)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Phone)
                </dd>

                <dt>
                    Address
                </dt>

                <dd>
                    @if (Model.Address != null)
                    {
                        @Html.DisplayFor(model => model.Address);
                        <br />
                        @Html.DisplayFor(model => model.City);
                        <span>, </span>
                        @Html.DisplayFor(model => model.State);
                        <span> </span>
                        @Html.DisplayFor(model => model.ZipCode);
                    }
                    else
                    {
                        <span>Address is unavaiable</span>
                    }
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.StudentStatus.SSName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.StudentStatus.SSName)
                </dd>
            </dl>
        </div>
    </div>
    <p class="text-right">
        @if (User.IsInRole("Admin"))
        {
            @Html.ActionLink("Edit", "Edit", new { id = Model.StudentID }, new { @class = "btn btn-info mx-2" })
        }
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </p>
</div>


@model SAT.DATA.EF.ScheduledClass

@{
    ViewBag.Title = Model.Term;
}

<div class="container p-3">
    <div class="row">
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    Term
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.StartDate) thru
                    @Html.DisplayFor(model => model.EndDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.InstructorName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.InstructorName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Location)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Location)
                </dd>
            </dl>
        </div>
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Course.CourseName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Course.CourseName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ScheduledClassStatus.SCSName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ScheduledClassStatus.SCSName)
                </dd>

            </dl>
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.ScheduledClassID }, new { @class = "btn btn-info" })
                @Html.ActionLink("Back to Schedule", "Index", null, new { @class = "btn btn-secondary mx-2" })
            </p>

        </div>
    </div>
</div>

@model IEnumerable<SAT.DATA.EF.Student>

@{
    ViewBag.Title = "Students";
}

<div class="container p-3">
    @if (User.IsInRole("Admin"))
    {
        <div class="p-3">
            @Html.ActionLink("Add New Student", "Create", null, new { @class = "filled-button" })
        </div>
    }
    <table class="table data-table stripe">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                @*<th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Major)
                </th>
                @*<th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoURL)
            </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.StudentStatus.SSName)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/Content/images/students/t_@item.PhotoURL" alt="@item.FirstName" title="@item.LastName" class="img-fluid" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    @*<td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Major)
                    </td>
                    @*
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZipCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhotoURL)
                </td>
                    *@
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentStatus.SSName)
                    </td>

                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.StudentID })
                        @if (User.IsInRole("Admin"))
                        {
                            <span> | </span>
                            @Html.ActionLink("Edit", "Edit", new { id = item.StudentID }, new { @class = "text-info" })
                            <span> | </span>
                            @Html.ActionLink("Delete", "Delete", new { id = item.StudentID }, new { @class = "text-danger" })
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


